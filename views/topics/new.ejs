  <h1 class="h1">Create a new topic!</h1>
  <form action="/topics" method="post">
    <input class="title" type="text"
           name="topic[title]"
           placeholder="Title">
           <br>
    <!-- <input class="author" type="text"
           name="topic[author]"
           placeholder="Author">
           <br> -->
    <input class="body" type="text"
           name="topic[body]"
           placeholder="Body">
           <br>
    <!-- <input class="comments" type="text"
           name="topic[comments][]"
           placeholder="Comments">
           <br> -->
    <input type="submit" value="Post Topic!">
  </form>
