<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Show All</title>
  </head>
  <body>
    <div class="topic">
      <h3><%= topic.title %></h3>
      <p><%= topic.body %></p>
      <!-- <h4><%= topic.comments.content %></h4> -->
      <% topic.comments.forEach(function (comments, i) { %>
        <h5><%= comments.content %></h5>
      <% }) %>

      <form action="/topics/<%= topic._id %>/comments" method="POST">
        <input type="text" name="topic[comments][content]">
        <input type="submit" value="post comment">
      </form>
    </div>
  </body>
</html>
